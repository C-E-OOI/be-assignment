generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int     @id @default(autoincrement())
  name              String
  email             String?     @unique
  password          String
  role              String      @default("user")
  refreshTokens   RefreshToken[]
  paymentAccounts   PaymentAccount[] 
  createdAt         DateTime    @default(now()) @map("created_at")
  updatedAt         DateTime    @updatedAt @map("updated_at")
  @@map("users")
}

model RefreshToken {
  id          String   @id @unique @default(uuid())
  hashedToken String
  userId      Int
  User        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  revoked     Boolean  @default(false)
  createdAt   DateTime @default(now())
}


model Transaction {
  id            Int     @id @default(autoincrement())
  transactionId String  @unique @default(uuid())
  amount        Float
  status        String
  toAddress     String
  historyId     Int
  history       PaymentHistory  @relation(fields: [historyId], references: [id])
  timestamp     DateTime    @default(now())
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")
  @@map("transactions")
}


// Payment History: Records of transactions
model PaymentHistory {
  id            Int     @id @default(autoincrement())
  historyId     String  @unique @default(uuid())
  accountId     Int
  account       PaymentAccount @relation(fields: [accountId], references: [id])
  transactions  Transaction[]
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")
  @@map("payment_historys")
}

// Payment Account: One user can have multiple accounts like credit, debit, loan...
model PaymentAccount {
  id              Int     @id @default(autoincrement())
  accountId       String  @unique @default(uuid())
  type            String      // e.g., credit, debit, loan
  paymentNumber   String    
  balance         Float       @default(0)
  userId          Int
  user            User        @relation(fields: [userId], references: [id])
  paymentHistory  PaymentHistory[]
  updatedAt       DateTime    @updatedAt
  createdAt       DateTime    @default(now())

  @@map("payment_accounts")
}

